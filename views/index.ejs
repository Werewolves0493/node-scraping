<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="refresh" content="5;URL=/">
    <% include common/head %>
</head>
<body class="container">
<header>
    <% include common/header %>
</header>

<main>
    <div>
        <h3>Total URLs : <%= totalUrlCt %></h3>
        <h3>Completed URLs : <%= visitUrlCt %></h3>
        <h3>Product : <%= productCt %></h3>

        <hr>
        <div class="row">
            <div class="col-md-6">
                <h3>Process Count(max 4): <%= processList.length %></h3>
            </div>
            <div class="col-md-6">
                <h3><a href="/newProcess" class="btn btn-primary">New Process</a></h3>
            </div>
        </div>
        <% processList.forEach(function(process){ %>
        <div class="row">
            <div class="col-md-3"><%= process.id %></div>
            <div class="col-md-3"><%= process.startTime %></div>
            <div class="col-md-3"><%= process.status %></div>
            <div class="col-md-3"><%= process.lastUpdates %></div>
        </div>
        <% }); %>
        <hr><h3>Logs</h3>
        <table width="100%">
            <tr>
                <th>ProcessID</th>
                <th>Message</th>
                <th>DateTime</th>
            </tr>
            <% logs.forEach(function(log){ %>
            <tr>
                <th><%= log.process %></th>
                <th><%= log.message %></th>
                <th style="max-width: 350px;"><%= log.url %></th>
                <th><%= log.updated.toISOString() %></th>
            </tr>
            <% }); %>
        </table>
    </div>
</main>

<footer><% include common/footer %></footer>
</body>
</html>